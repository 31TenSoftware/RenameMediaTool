<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8"
      fx:controller="com.thirtyonetensoftware.renamemediatool.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Button mnemonicParsing="false" onAction="#onChooseDirectoryButtonClick" prefHeight="35.0" prefWidth="Infinity"
            text="Choose Folder"/>
    <Label fx:id="mPathLabel" wrapText="true">
        <VBox.margin>
            <Insets top="20.0"/>
        </VBox.margin>
    </Label>
    <HBox alignment="CENTER_LEFT" prefWidth="Infinity" VBox.vgrow="NEVER">
        <VBox.margin>
            <Insets bottom="20.0" top="5.0"/>
        </VBox.margin>
        <Label text="Changes Log:">
            <HBox.margin>
                <Insets right="15.0"/>
            </HBox.margin>
        </Label>
        <Label fx:id="mChangesLogLabel"/>
    </HBox>
    <ProgressBar fx:id="mProgressBar" prefHeight="23.0" prefWidth="Infinity" progress="0.0"/>
    <Button mnemonicParsing="false" onAction="#onStopButtonClick" prefHeight="35.0" prefWidth="Infinity"
            text="Stop">
        <VBox.margin>
            <Insets bottom="10.0" top="10.0"/>
        </VBox.margin>
    </Button>
    <TextArea fx:id="mOutputBox" prefHeight="200.0" prefWidth="200.0" wrapText="true" VBox.vgrow="ALWAYS"/>
    <Button disable="true" fx:id="mWriteChangesButton" mnemonicParsing="false" onAction="#onWriteChangesButtonClick"
            prefHeight="35.0" prefWidth="Infinity" text="Write Changes to Files">
        <VBox.margin>
            <Insets top="20.0"/>
        </VBox.margin>
    </Button>
</VBox>
